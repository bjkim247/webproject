import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/RegisterServlet")
public class RegisterServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String uid = request.getParameter("uid");
        String pw = request.getParameter("pw");
        String cpw = request.getParameter("cpw");
        String mail = request.getParameter("mail");
        String uname = request.getParameter("uname");
        String year = request.getParameter("year");
        String month = request.getParameter("month");
        String day = request.getParameter("day");
        String[] hobby = request.getParameterValues("hobby");
        String me = request.getParameter("me");

        // 유효성 검사 및 로직 처리 등을 이곳에서 수행

        // 예시: 폼 데이터를 출력하여 확인하기
        System.out.println("아이디: " + uid);
        System.out.println("비밀번호: " + pw);
        System.out.println("메일주소: " + mail);
        // ... (나머지 데이터도 처리)

        // 유효성 검사가 통과되면 다음 로직을 수행하도록 구현

        // 필요한 로직 처리 및 데이터베이스 작업 등을 여기에 추가

        // 성공적으로 처리된 후 다음 페이지로 리다이렉트 또는 응답 처리
        response.sendRedirect("success.jsp"); // 성공 페이지로 이동
    }
}
