<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    /* 스타일링을 위한 CSS */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .content {
      height: 1200px; /* 스크롤 할 수 있는 컨텐츠 */
    }

    .anchor-section {
      height: 600px; /* 각 앵커 위치 */
      background-color: #f0f0f0;
      margin-bottom: 20px;
    }

    .scroll-btn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      display: none; /* 처음에는 숨겨둠 */
    }
  </style>
</head>
<body>
<div class="content">
    <div class="anchor-section" id="section1">
      <!-- 섹션 1 -->
    </div>
    <div class="anchor-section" id="section2">
      <!-- 섹션 2 -->
    </div>
    <div class="anchor-section" id="section3">
      <!-- 섹션 3 -->
    </div>
    <!-- 다른 섹션들도 필요에 따라 추가 가능 -->
  </div>

  <button class="scroll-btn" onclick="scrollToTop()">위로 이동</button>

  <script>
    // 버튼을 스크롤하면 나타나게 하는 함수
    window.onscroll = function() {scrollFunction()};
    
    function scrollFunction() {
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        document.querySelector('.scroll-btn').style.display = "block";
      } else {
        document.querySelector('.scroll-btn').style.display = "none";
      }
    }

    // 버튼 클릭 시 맨 위로 스크롤되는 함수
    function scrollToTop() {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    }
  </script>
</body>
</html>